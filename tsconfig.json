{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "allowSyntheticDefaultImports": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": false,
        "strict": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./dist",
        "lib": ["es2017", "es2016", "es2015"]
    },
    "include": ["src"]
}
