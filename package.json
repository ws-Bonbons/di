{
    "name": "@bonbons/di",
    "version": "1.3.4-rc.3",
    "description": "依赖注入node.js实现",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "make build",
        "build:rc": "make rc",
        "build:package": "make publish",
        "test": "mocha",
        "cover": "nyc mocha",
        "coverage": "npm run cover && nyc report --reporter=text-lcov | coveralls"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ws-Bonbons/di.git"
    },
    "author": "bigmogician",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ws-Bonbons/di/issues"
    },
    "homepage": "https://github.com/ws-Bonbons/di#readme",
    "nyc": {
        "all": false,
        "include": [
            "src/**/*.ts",
            "test/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "dependencies": {
        "reflect-metadata": "0.1.12"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.3.2",
        "chai": "^4.2.0",
        "coveralls": "^3.0.2",
        "mocha": "^5.2.0",
        "nyc": "^13.0.1",
        "source-map-support": "^0.5.9",
        "ts-node": "^8.0.2",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "1.17.0",
        "typescript": "^3.2.0"
    }
}
